{
  "version": 4,
  "cmakeMinimumRequired": {
    "major": 4,
    "minor": 0,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "default",
      "hidden": true,
      "generator": "Ninja Multi-Config",
      "binaryDir": "${sourceDir}/build/${presetName}"
    },
    {
      "name": "vcpkg",
      "hidden": true,
      "cacheVariables": {
        "CMAKE_TOOLCHAIN_FILE": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake"
      },
      "condition": {
        "type": "notEquals",
        "lhs": "$env{VCPKG_ROOT}",
        "rhs": ""
      }
    },
    {
      "name": "windows-base",
      "hidden": true,
      "inherits": ["default", "vcpkg"],
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      },
      "architecture": {
        "value": "x64",
        "strategy": "external"
      }
    },
    {
      "name": "linux-base",
      "hidden": true,
      "inherits": ["default", "vcpkg"],
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Linux"
      }
    },
    {
      "name": "macos-base",
      "hidden": true,
      "inherits": ["default", "vcpkg"],
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Darwin"
      }
    },
    {
      "name": "windows",
      "displayName": "Windows",
      "description": "Build for Windows using vcpkg-managed SDL3 and Dawn",
      "inherits": "windows-base"
    },
    {
      "name": "linux",
      "displayName": "Linux",
      "description": "Build for Linux using vcpkg-managed SDL3 and Dawn",
      "inherits": "linux-base"
    },
    {
      "name": "macos",
      "displayName": "macOS",
      "description": "Build for macOS using vcpkg-managed SDL3 and Dawn",
      "inherits": "macos-base"
    }
  ],
  "buildPresets": [
    {
      "name": "windows-debug",
      "displayName": "Windows Debug",
      "configurePreset": "windows",
      "configuration": "Debug"
    },
    {
      "name": "windows-release",
      "displayName": "Windows Release",
      "configurePreset": "windows",
      "configuration": "Release"
    },
    {
      "name": "linux-debug",
      "displayName": "Linux Debug",
      "configurePreset": "linux",
      "configuration": "Debug"
    },
    {
      "name": "linux-release",
      "displayName": "Linux Release",
      "configurePreset": "linux",
      "configuration": "Release"
    },
    {
      "name": "macos-debug",
      "displayName": "macOS Debug",
      "configurePreset": "macos",
      "configuration": "Debug"
    },
    {
      "name": "macos-release",
      "displayName": "macOS Release",
      "configurePreset": "macos",
      "configuration": "Release"
    }
  ]
}
